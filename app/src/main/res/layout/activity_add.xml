<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1"
    app:layout_behavior="@string/prompt_title"
    tools:context="com.frobom.reminder.AddActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:hint="@string/prompt_title"
            android:inputType="text"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="106dp">

        <AutoCompleteTextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:hint="Remind here...."
            android:inputType="textMultiLine"
            android:maxLines="4" />
    </android.support.design.widget.TextInputLayout>


    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="191dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="98dp"
        android:layout_height="36dp"
        android:layout_gravity="center"

        android:background="@color/mdtp_date_picker_text_disabled_dark_theme"
        android:text="Save"
        android:textColor="@color/mdtp_circle_color"
        android:textSize="16sp" />

</LinearLayout>
